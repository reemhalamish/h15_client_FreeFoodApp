<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityAddFood_spn_pictures"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dialog" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityAddFood_spn_building"
        android:layout_below="@+id/activityAddFood_spn_pictures"
        android:layout_alignParentLeft="true"
        android:spinnerMode="dialog" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ActivityAddFood_insideBuildingHint"
        android:id="@+id/activityAddFood_edt_inside_building"
        android:layout_below="@+id/activityAddFood_spn_building"
        android:layout_alignParentLeft="true"
     />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:hint="@string/ActivityAddFood_description_hint"
        android:layout_below="@+id/activityAddFood_edt_inside_building"
        android:layout_alignParentLeft="true"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityAddFood_bg_image"
        android:layout_below="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pooh_giving_flower" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add food!"
        android:id="@+id/activityAddFood_send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:id="@+id/activityAddFood_cancel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>